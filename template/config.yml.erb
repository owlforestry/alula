# Alula Blog

# Author of this blog
author: <%= default_config["author"] %>

# Blog main title
title: <%= default_config["title"] %>

# Subtitle, tagline
tagline: <%= default_config["tagline"] %>

# Chosed theme
theme: <%= default_config["theme"] %>

# Options for image settings
images:
  size: <%= default_config["images"]["size"] %>			# Resize photos to this size
  thumbnails: <%= default_config["images"]["thumbnails"] %>	# # Thumbnail size (width x height)
  retina: <%= default_config["images"]["retina"] %>			# Generate photos for retina displays

# Root URL, if you host blog in directory, fix this according
root: <%= default_config["root"] %>

# Permalinks style
permalink: "<%= default_config["permalink"] %>"

# Posts per page on the blog index
paginate: <%= default_config["paginate"] %>

# Directory base for pagination URLs eg. /blog/page/2/
pagination_dir: <%= default_config["pagination_dir"] %>

# "Continue reading" link text at the bottom of excerpted articles
excerpt_link: "<%= default_config["excerpt_link"] %>"

# Plugins
plugins:
<%= default_config["plugins"].to_yaml.split("\n")[1..-1].collect{|l| "  #{l}"}.join("\n") %>
