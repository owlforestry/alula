# Alula Blog

# Blog main title
title: <%= default_config["title"] %>

# Subtitle, tagline
tagline: <%= default_config["tagline"] %>

# Author of this blog
author: <%= default_config["author"] %>

# Theme for blog, see alula-themes gem for more choices
#theme: <%= default_config["theme"] %>

# Site URL
url: <%= default_config["url"] %>

# Permalink format
#permalink: <%= default_config["permalink"] %>

# Number of posts per page
#paginate: <%= default_config["paginate"] %>

# Path for paginated pages
#paginate_path: <%= default_config["paginate_path"] %>

# Number of recent posts in RSS Feed
#feed_posts: <%= default_config["feed_posts"] %>

# Images options
#images:
  # Resize attachment images to this size
  # size: <%= default_config["images"]["size"] %>
  # Generate thumbnails of this size
  # thumbnails: <%= default_config["images"]["thumbnails"] %>

# Videos options
# videos:
  # Resize HD videos to this size
  # size_hd: <%= default_config["videos"]["size_hd"] %>
  # Resize SD videos to this size, or generate SD version from HD video
  # size_sd: <%= default_config["videos"]["size_sd"] %>
  # Generate given size thumbnails
  # thumbnails: <%= default_config["videos"]["thumbnails"] %>
  # By default Alula uses Zencoder for generating proper videos
  # zencoder:
    # Zencoder API token
    # token: <%= default_config["videos"]["zencoder"]["token"] %>
    # Amazon S3 key id for creating bucket and accessing it
    # key_id: <%= default_config["videos"]["zencoder"]["key_id"] %>
    # Amazon S3 access key for creating and accessing upload bucket
    # access_key: <%= default_config["videos"]["zencoder"]["access_key"] %>

# Plugins
plugins:
