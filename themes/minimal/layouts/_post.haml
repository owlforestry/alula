.meta
	%time{datetime: page.date.strftime("%FT%T%z"), pubdate: true, data: {updated: true}}
		= page.date.strftime("%a %d %b %Y")

- if page.parent
	%a{title: page.title, href: page.url}
		%h1= page.title
- else
	%h1= page.title

= page.content

- unless page.parent
	%p.navigation
		- if page.previous
			%a{class: "left", title: "Previous Post: #{page.previous.title}", href: page.previous.url} &laquo; #{page.previous.title}
		- if page.next
			%a{class: "right", title: "Next Post: #{page.next.title}", href: page.next.url} #{page.next.title} &raquo;
