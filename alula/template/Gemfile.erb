gem 'alula-themes', path: '<%= options["path"] %>/alula'
gem 'alula-plugins', path: '<%= options["path"] %>/alula'
<% elsif options["edge"] %>
gem 'alula', git: 'git://github.com/owlforestry/alula.git'
gem 'alula-themes', git: 'git://github.com/owlforestry/alula.git'
gem 'alula-plugins', git: 'git://github.com/owlforestry/alula.git'
<% else %>
gem 'alula'
gem 'alula-themes'
gem 'alula-plugins'
<% end %>
